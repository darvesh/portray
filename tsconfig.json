{
	"compilerOptions": {
		"module": "CommonJS",
		"removeComments": true,
		"incremental": true,
		"preserveConstEnums": true,
		"outDir": "build",
		"strict": true,
		"esModuleInterop": true,
		"target": "ES2019",
		"lib": ["ES2020"],
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "test"]
}
