{
	"name": "@darvesh/portray",
	"version": "0.5.2",
	"description": "Generate beautiful image from your source code",
	"main": "index.js",
	"scripts": {
		"test": "mocha -t 2000 --reporter spec --require ts-node/register 'test/**/*.test.ts'",
		"build": "tsc && copyfiles -f ./src/resources/**/* ./build/resources",
		"pre-publish": "npm run build && copyfiles package.json package-lock.json README.md build"
	},
	"author": "Darvesh",
	"license": "MIT",
	"dependencies": {
		"highlight.js": "^10.3.1"
	},
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/chai-as-promised": "^7.1.3",
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.14.2",
		"@typescript-eslint/eslint-plugin": "^4.5.0",
		"@typescript-eslint/parser": "^4.5.0",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"copyfiles": "^2.4.0",
		"eslint": "^7.12.0",
		"eslint-config-prettier": "^6.14.0",
		"eslint-plugin-prettier": "^3.1.4",
		"mocha": "^8.2.0",
		"prettier": "^2.1.2",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.3"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"singleQuote": false,
		"trailingComma": "none",
		"arrowParens": "avoid",
		"printWidth": 80
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/darvesh/portray.git"
